    See([PC])
    Global("rqTobRetreatImpossible","GLOBAL",1)
THEN
    RESPONSE #100
        CreateVisualEffectObject("SPDIMNDR",Myself)
        SetGlobal("rqTobRetreatImpossible","GLOBAL",2)
END
